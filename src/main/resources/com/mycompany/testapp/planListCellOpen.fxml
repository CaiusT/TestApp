<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="planPane" prefWidth="400.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-color: #98CA48; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/8.0.321" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="planNumber" text="01" textFill="#313a42">
               <font>
                  <Font name="Tahoma Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="planName" text="Fluxograma" textFill="#313a42" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="Tahoma Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <ListView fx:id="revisionList" orientation="HORIZONTAL" prefHeight="44.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5; -fx-border-color: #98CA48; -fx-border-radius: 5;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </BorderPane.margin>
      </ListView>
   </center>
   <bottom>
      <HBox fx:id="btnBox" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addRevision" minWidth="28.0" mnemonicParsing="false" prefHeight="30.0" style="-fx-background-radius: 15; -fx-background-color: #98CA48;" text="+" textAlignment="CENTER">
               <font>
                  <Font name="Tahoma Bold" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="openFile" minWidth="28.0" mnemonicParsing="false" prefHeight="30.0" style="-fx-background-radius: 15; -fx-background-color: #98CA48;" text="Open File" textAlignment="CENTER">
               <font>
                  <Font name="Tahoma Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="editPlan" minWidth="28.0" mnemonicParsing="false" prefHeight="30.0" style="-fx-background-radius: 15; -fx-background-color: #98CA48;" text="Edit">
               <font>
                  <Font name="Tahoma Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="changeFile" minWidth="28.0" mnemonicParsing="false" prefHeight="30.0" style="-fx-background-radius: 15; -fx-background-color: #98CA48;" text="Change file">
               <font>
                  <Font name="Tahoma Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="deletePlan" minWidth="28.0" mnemonicParsing="false" onAction="#deletePlan" prefHeight="30.0" style="-fx-background-radius: 15; -fx-background-color: #ca4848;" text="Delete">
               <font>
                  <Font name="Tahoma Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
